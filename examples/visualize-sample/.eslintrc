{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "flowtype-errors"
  ],
  "settings": { 
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.js"
      }
    },
    "flowtype-errors": {
      "flowDir": "./"
    }
  },
  "ecmaFeatures": {
    "classes": true,
    "jsx": true
  },
  "env": {
    "browser": true
  },
  "globals": {
    "document": true,
    "window": true
  },
  "rules": {
    "comma-dangle": 0,
    "no-undef": 0,
    "react/prefer-stateless-function": 0,
    "react/require-default-props": 0,
    "import/no-unresolved": 0,
    "react/prop-types": 0,
    "react/jsx-no-bind": 0,
    "class-methods-use-this": 0,
    "no-unused-vars": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ]
  }
}