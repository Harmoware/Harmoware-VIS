{
  "compilerOptions": {
      "sourceMap": true,
      "allowSyntheticDefaultImports": true, 
      // TSはECMAScript 6に変換
      "target": "es6",
      // TSのモジュールはES Modulesとして出力
      "module": "es2015",
      // JSXの書式を有効に設定
      "jsx": "react",
      "outDir": "lib",
      "sourceRoot": "./src",
      "declaration": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "harmoware-vis": ["src/"]
      },
      "lib": [
      "es2018",
      "dom"
      ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "bower_components",
    "jspm_packages",
    "<outDir>"
  ]
}
